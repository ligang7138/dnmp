server {
    listen 80;
    server_name phpboot.com;
    charset utf-8;
    index index.php;
    error_log /var/www/html/phpboot-example/error.log;
    access_log /var/www/html/phpboot-example/access.log;
    root /var/www/html/phpboot-example/public;

    location / {
        try_files $uri /index.php$is_args$args;
    }

    location ~ \.php {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param SCRIPT_NAME $fastcgi_script_name;
        fastcgi_index index.php;
        fastcgi_pass fpm:9000;
    }
}
